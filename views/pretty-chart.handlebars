<div class='header'>
  <div class='logo'><img src='images/logo.svg' /></div>
  <div class='subscribe-button'>Subscribe</div>
</div>

<div class='maker-container'>

  <div class='maker-factory-container'>
    <div class='maker-factory'>
      <div class='factory-header-container'>
        <ul class='factory-header'>
          <li class='dropdowns'>
            <select class='font-dropdown'>
              <option>Helvetica</option>
              <option>Times New Roman</option>
              <option>Sans-Serif</option>
            </select>

            <select class='textsize-dropdown'>
              <option>8</option>
              <option>12</option>
              <option>20</option>
            </select>
          </li>
          <li class='buttons'>
            <div class='margin'></div>
            <div class='bold-button'><img src='images/bold.svg' /></div>
            <div class='italic-button'><img src='images/italic.svg' /></div>
            <div class='underline-button'><img src='images/underline.svg' /></div>
            <div class='margin'></div>
          </li>
        </ul>
      </div>

      <ul class='editor-pane'></ul>

      <ul class='factory-footer'>
        <li class='square-generator'><img src='images/red-square.svg' /></li>
        <li class='triangle-generator'><img src='images/green-triangle.svg' /></li>
        <li class='circle-generator'><img src='images/blue-circle.svg' /></li>
        <li class='diamond-generator'><img src='images/yellow-diamond.svg' /></li>
      </ul>
    </div>

    <!--class='ui-resizable-handle ui-resizable-e'-->
    <div class='buffer'></div>
  </div>



  <div class='maker-sandbox'></div>

</div>

<form class='login-form' action='register' method='post'>
  <div class='login-part1'>
    <label for='username'>Username</label>
    <input id='username' name='username' type='text' placeholder='Enter some shit you stupid bitch'></input>
    <label for='email'>Email</label>
    <input id='email' name='email' type='text' placeholder='stupid@bitch.com'></input>
    <label for='password'>Password</label>
    <input id='password' name='password' type='text' placeholder='*****'></input>

    <button class='next-button' type='button'>Next</buttont>
  </div>

  <div class='login-part2 hide-form'>
    <label for='card-number'>Card Number</label>
    <input id='card-number' name='card-number' type='text'></input>

    <button class='prev-button' type='button'>Previous</button>
    <input class='register-button' type='submit'></input>
  </div>
</form>
